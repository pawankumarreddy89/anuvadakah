generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  translations      Translation[]
  liveSessions      LiveSession[]
  preferences       UserPreference?
}

model Translation {
  id              String   @id @default(cuid())
  userId          String?
  user            User?    @relation(fields: [userId], references: [id], onDelete: SetNull)

  // Translation content
  sourceText      String
  sourceLanguage  String
  targetText      String
  targetLanguage  String

  // Modality: text, voice, pdf, image
  modality        String   @default("text")

  // Metadata
  favorited       Boolean  @default(false)
  accuracyScore   Float?

  // Optional file reference for pdf/image
  fileReference   String?

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([userId])
  @@index([favorited])
  @@index([createdAt])
}

model LiveSession {
  id              String   @id @default(cuid())
  userId          String?
  user            User?    @relation(fields: [userId], references: [id], onDelete: SetNull)

  // Session metadata
  sessionName     String?
  participants    String   // JSON string of participants
  transcript      String   // JSON string of messages

  // Session stats
  durationSeconds Int      @default(0)
  messageCount    Int      @default(0)

  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  endedAt         DateTime?

  @@index([userId])
  @@index([isActive])
}

model UserPreference {
  id              String   @id @default(cuid())
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Default language preferences
  defaultSourceLang String  @default("en")
  defaultTargetLang String  @default("hi")

  // UI preferences
  theme           String   @default("light") // light, dark
  autoPlayTTS     Boolean  @default(false)

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
